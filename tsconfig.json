{
    "compilerOptions": {
        "declaration": true,
        "noResolve": false,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist/",
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,        
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true
    },

    "filesGlob": [
        "src/**/*{ts,tsx}"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}
